<component name = "RowListItem" extends = "Group" >
 
  <interface > 
    <field id = "itemContent" type = "node" onChange = "showcontent"/>
    <field id = "focusPercent" type = "float" onChange = "showfocus"/> 
    <field id = "rowFocusPercent" type = "float" onChange = "showrowfocus"/>
  </interface>
 
  <!-- importing main handler -->
    <script type="text/brightscript" uri="pkg:/components/RowListItem.brs" />

  <children >

    <Poster 
      id = "itemPoster"
      translation = "[ 10, 10 ]" 
      width = "0" 
      height = "0" 
      scaleRotateCenter = "[ 256.0, 144.0 ]" >

      <Rectangle 
        id = "itemMask"
        color = "0x000000FF"
        opacity = "0.75" 
        width = "0" 
        height = "0" 
        scaleRotateCenter = "[ 256.0, 144.0 ]"/>
      
       <Rectangle 
        id = "itemMaskDescription"
        color = "0x495564"
        opacity = "0.75"
        width = "600" 
        height = "540" 
        scaleRotateCenter = "[ 200.0, 220.0 ]"
        visible = "false">
        	
        	<Label 
		      id = "itemDescriptionLabel" 
		      translation = "[ 0, 0 ]" 
		      horizAlign = "left" 
		      width = "0" 
		      wrap = "true"
		      maxlines = "8"
		      
		      opacity = "50.0"/>
        	
        </Rectangle> 

    </Poster>
    <Label 
	      id = "itemLabel" 
	      translation = "[ 350, 464 ]" 
	      horizAlign = "right" 
	      width = "100" 
	      opacity = "0.0"/>

  </children>

</component>
